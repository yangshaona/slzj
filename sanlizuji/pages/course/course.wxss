/* pages/course/course.wxss */

@import '../template/not_found/not_found.wxss';
.top {
    display: block;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding: 5%;
    background: #f5f5f5;
    text-align: center;
    position: relative;
    z-index: 2;
}

.top::after {
    content: '';
    display: block;
    box-sizing: border-box;
    position: absolute;
    width: 10%;
    height: 10px;
    background-image: linear-gradient(to right, #91a0ff, #5e73ff);
    border-radius: 1rem;
    margin: -5px 40% auto 40%;
    z-index: -1;
}

.total {
    display: block;
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    background: white;
    padding-bottom: 0;
    overflow: hidden;
}


/* 筛选栏 */

.filterTop {
    position: absolute;
    display: block;
    width: 40px;
    overflow: scroll;
    margin: 0 0 auto 5%;
    z-index: 11;
}

.filterTop image {
    display: block;
    margin: 0 20%;
    width: 60%;
    opacity: 80%;
}

.filterTop view {
    text-align: center;
    font-size: 0.75rem;
    color: #555555;
}

.filterShow {
    display: block;
    position: absolute;
    z-index: 10;
    box-sizing: border-box;
    width: 80% !important;
    height: 100%;
    /* height: 100% !important; */
    padding: 2% 5% 20% 5%;
    background: #f5f5f5;
    box-shadow: 1px 20px 15px #666666;
    overflow: scroll;
    transition: all cubic-bezier(0.23, 1, 0.320, 1) 0.5s !important;
}

.zhezhao {
    width: 100%;
    height: 100%;
    background: rgb(49, 48, 53, 0.3);
    position: absolute;
    top: 10%;
    left: 0%;
    z-index: 99;
}

.filterHide {
    display: block;
    position: absolute;
    z-index: 10;
    box-sizing: border-box;
    width: 80% !important;
    top: 13%;
    /* height: 100% !important; */
    padding: 20% 5%;
    background: #f5f5f5;
    margin-left: -80%;
    transition: all cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.5s !important;
}

.filter {
    display: block;
    box-sizing: border-box;
    width: 100%;
    padding: 2.5%;
}

.filterTtl {
    font-size: 1.25rem;
    display: block;
    box-sizing: border-box;
    padding: 2.5%;
}

.filterBox {
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 2.5%;
}

.filterCtn {
    display: block;
    box-sizing: border-box;
    padding: 5% 2.5%;
    border-radius: 0.5rem;
    text-align: center;
    background: white;
    margin: 2.5% 2.5%;
    font-size: 0.85rem;
    transition: all 0.25s;
}

.region {
    width: 60%;
    height: 50%;
}

.filterCtn[data-id='1'] {
    display: block;
    box-sizing: border-box;
    padding: 5% 2.5%;
    border-radius: 0.5rem;
    text-align: center;
    background: #6177ff;
    color: white;
    margin: 2.5% 2.5%;
    font-size: 0.85rem;
    transition: all 0.25s;
}

.confirm {
    font-weight: 400;
    width: 30%;
    background-image: linear-gradient(to right, #a2afff, #6177ff);
    color: white;
}


/* 顶部标题 */

.title {
    display: block;
    box-sizing: border-box;
    width: 100%;
    text-align: center !important;
    color: black;
    padding: 8px;
    background: #f5f5f5;
    margin-bottom: 0;
}


/* 搜索框 */

.search {
    /* display: flex; */
    width: 100%;
    margin: 0;
    background: #f5f5f5;
    /* flex-direction: row; */
    /* justify-content: space-between;
    padding: 2.5% 2.5% 2.5% 0%; */
    padding: 1% 2.5% 1% 0%;
}

.srcExt {
    display: flex;
    box-sizing: border-box;
    flex-direction: row-reverse;
    width: 75%;
    margin: 1% 5% 2.5% auto;
    border-radius: 1rem;
    overflow: hidden;
    background: white;
}

.srcImg {
    display: block;
    width: 30px !important;
    height: 30px !important;
    margin: auto 0;
    border-radius: 100%;
    opacity: 80%;
}

.inputExt {
    width: 85%;
    padding: 1% 0;
    /* padding-left: 20rpx; */
    opacity: 100%;
}

.search1 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 45px;
}

.search-input {
    display: flex;
    width: 80%;
    border-radius: 20rpx;
    margin: 10px 5px;
    background-color: #ffffff;
    flex-direction: row;
    height: 25px;
}

.search button {
    display: flex;
    font-size: 27rpx;
    width: 120rpx;
    margin: 1%;
    height: 50rpx;
    border-radius: 20rpx;
    align-items: center;
    justify-content: center;
    background-color: #6177ff;
    color: white;
}

.search icon {
    margin-top: 6rpx;
    margin-left: 15rpx;
    margin-right: 20rpx;
}

.choose {
    color: #8695fa;
}

.noChoose {
    color: #6177ff;
}


/* 活动部分 */

.actTop {
    display: block;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    overflow: scroll;
    margin: 0;
    padding: 2.5% 0;
    transition: all 0.5s;
}


/* 活动卡片 */

.actBox {
    display: block;
    box-sizing: border-box;
    width: 90%;
    background: whitesmoke;
    margin: 5%;
    padding: 0;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0px 1px 5px #aaaaaa;
}


/* 缩略图容器 */

.actImg {
    height: 65% !important;
    overflow: hidden;
}


/* 缩略图 */

.actImg image {
    width: 100% !important;
    height: 100%;
}


/* 卡片下部分 */

.ctnBox {
    display: block;
    box-sizing: border-box;
    width: 100%;
    height: 35% !important;
    overflow: hidden;
    padding: 5% 2.5% 2.5% 5%;
}


/* 活动标题 */

.actTitle {
    display: block;
    box-sizing: border-box;
    width: 100%;
    padding: 0 0 4% 0;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}


/* ddl及报名人数 */

.descBox {
    display: flex;
    box-sizing: border-box;
    width: 100%;
    font-size: 0.75rem;
}

.ddl {
    display: block;
    width: 60%;
    text-align: left;
    font-weight: 100 !important;
    color: #888888;
    margin: auto 0;
}

.numBox {
    display: flex;
    box-sizing: border-box;
    width: 60%;
    flex-direction: row-reverse;
}

.numBox image {
    width: 1rem;
    position: relative;
    margin: auto 0;
}

.numBox view {
    text-align: right;
    color: #6177ff;
}

.course-list {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: white;
}

.course-border {
    width: 95%;
    background-color: white;
    /* margin-top: 15rpx; */
    border-width: 0rpx;
    display: flex;
}

.course-content {
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid rgb(224, 222, 222);
    /* height: 120px; */
}

.course-content image {
    flex: 2;
    width: 100%;
    height: 100px;
    border-radius: 15rpx;
    margin: 10rpx;
}

.course-text {
    flex: 5;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* margin: 10rpx; */
}

.course-text text {
    font-size: 28rpx;
}

.bottom-content text {
    font-size: 22rpx;
}

.bottom-content image {
    width: 30rpx;
}

.button {
    display: flex;
    flex-direction: row;
}