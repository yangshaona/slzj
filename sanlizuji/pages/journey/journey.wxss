/* pages/journey/journey.wxss */

@import '../template/scope/scope.wxss';
@import '../template/unbounded/unbounded.wxss';
.total {
    display: block;
    box-sizing: border-box;
    padding: 5% 0;
    background-color: white;
}

.actCard {
    display: block;
    box-sizing: border-box;
    width: 90%;
    overflow: hidden;
    border-radius: 1.5rem;
    background: #f5f5f5;
    box-shadow: 0px 0px 10px #d3d3d3;
    margin: 0 5%;
}

.actImg {
    width: 100%;
    height: 70% !important;
    box-shadow: 0px 1px 5px #888888;
}

.actInfo {
    display: block;
    box-sizing: border-box;
    width: 100%;
    height: 30%;
    padding: 1% 2.5%;
}

.actName {
    display: block;
    box-sizing: border-box;
    margin: 0 0 2.5% 0;
    font-size: 1.25rem;
    letter-spacing: 1px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.actDate {
    display: flex;
    width: 100%;
    height: 100%;
}

.actDate view {
    display: block;
    width: 50%;
    font-size: 0.85rem;
}

.actDate view:nth-child(2) {
    text-align: right;
}


/* 活动行程 */

.journeyTop {
    display: block;
    box-sizing: border-box;
    position: relative;
    width: 90%;
    margin: 5%;
}

.journeyTitle {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 10% 0;
    font-size: 1.25rem;
    letter-spacing: 1px;
    text-align: center;
    color: #6177ff;
}

.oneDay {
    display: block;
    position: relative;
    box-sizing: border-box;
    width: 100%;
    background: #f5f5f5;
    margin: 5% 0;
    padding: 5%;
    border-radius: 0 1rem 1rem 0;
    box-shadow: 1px 1px 10px lightgray;
}

.journeyTop::after {
    content: '';
    display: block;
    box-sizing: border-box;
    position: absolute;
    width: 100%;
    border-left: 5px #6177ff solid;
    height: 100%;
    top: 0%;
    left: 0%;
    opacity: 80%;
    z-index: 1;
}

.day {
    display: block;
    box-sizing: border-box;
    margin: 0 0 5% 2.5%;
    color: #6177ff;
    letter-spacing: 5px;
}

.event {
    display: flex;
    box-sizing: border-box;
    margin: 0 0 5% 0;
}

.local {
    display: flex;
    box-sizing: border-box;
}

.journeyIcon {
    width: 8%;
    margin: auto 0;
}

.desc {
    margin: 0 0 0 2.5%;
    color: #666666;
}

.empty {
    display: block;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding: 20% 10%;
}

.empty image {
    display: block;
    width: 60%;
    margin: 2% 20%;
    opacity: 70%;
}

.empty view {
    text-align: center;
    color: #888888;
    margin-top: 15rpx;
}