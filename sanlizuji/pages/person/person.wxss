.me-title {
    height: 80px;
    width: 100%;
    background-color: #fff
}

.top {
    display: block;
    box-sizing: border-box;
    width: 100%;
    padding: 5%;
    text-align: center;
    position: relative;
    z-index: 2;
}

.top::after {
    content: '';
    display: block;
    box-sizing: border-box;
    position: absolute;
    width: 10%;
    height: 10px;
    background-image: linear-gradient(to right, #91a0ff, #5e73ff);
    border-radius: 1rem;
    margin: -5px 40% auto 40%;
    z-index: -1;
}

.infoBox {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    padding: 5% 10% 5% 10%;
    margin: 0 0 5% 0;
    background-image: linear-gradient(to right, #ffffff, #f5f5f5);
}


