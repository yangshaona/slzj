<view class="total">
    <!-- 状态栏填色 -->
    <!-- <view style="display: block; width: 100%; height: {{statusHeight+'px'}} !important;"></view> -->
    <!-- 轮播图 -->
    <view class="swiper">
        <swiper indicator-dots="{{indicatorDots}}" circular="true" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
            <block wx:for="{{imgUrl}}" wx:key="item">
                <swiper-item>
                    <view class="swiper-item" data-index='{{index}}'>
                        <image lazy-load='true' src='{{item}}' mode="aspectFill" bindchange="swiperChange"></image>
                    </view>
                </swiper-item>
            </block>
        </swiper>
    </view>

    <!-- 导航栏 -->
    <view class="navTop">
        <block wx:for="{{navigation}}" wx:key="item">
            <view class="nav">
                <!-- icon -->
                <image src="{{item.imgUrl}}" mode="widthFix"></image>
                <!-- text -->
                <view>{{item.text}}</view>
            </view>
        </block>
    </view>

    <!-- 搜索框 -->
    <view class="{{searchClass}}">
        <image src="/icon/search2.png" mode="widthFix" class="srcImg" bindtap="searchTap"></image>
        <input type="text" name="search" id="search" placeholder="找点东西" class="{{inputClass}}" bindinput="writeData" />
    </view>
    <!-- 热门活动 -->
    <view class="actTop">
        <view class="title">热门活动</view>
        <!-- 活动卡片 -->
        <block wx:for="{{popActivity}}" wx:key="item">
            <view class="actBox" style="height: {{height*0.3+'px'}};" bindtap="turnTo">
                <!-- 活动缩略图 -->
                <view class="actImg">
                    <image src="{{item.imgUrl}}" mode="aspectFill"></image>
                </view>
                <view class="ctnBox">
                    <!-- 活动主题 -->
                    <view class="actTitle">{{item.actTitle}}</view>
                    <view class="descBox">
                        <!-- 报名时间 -->
                        <view class="ddl">报名截止: <text style="color: #6177ff;">{{item.ddl}}</text></view>
                        <!-- 报名人数 -->
                        <view class="numBox">
                            <view>{{item.actNum}}</view>
                            <image src="/icon/account.png" mode="widthFix"></image>
                        </view>
                    </view>
                </view>
            </view>
        </block>
    </view>

    <!-- 往期回顾 -->
    <view class="actTop">
        <view class="title">往期回顾</view>
        <!-- 活动卡片 -->
        <block wx:for="{{history}}" wx:key="item">
            <view class="actBox" style="height: {{height*0.3+'px'}};" bindtap="turnTo">
                <!-- 活动缩略图 -->
                <view class="actImg">
                    <image src="{{item.imgUrl}}" mode="aspectFill"></image>
                </view>
                <view class="ctnBox">
                    <!-- 活动主题 -->
                    <view class="actTitle">{{item.actTitle}}</view>
                    <view class="descBox">
                        <!-- 报名时间 -->
                        <view class="ddl">报名截止: <text style="color: #6177ff;">{{item.ddl}}</text></view>
                        <!-- 报名人数 -->
                        <view class="numBox">
                            <view>{{item.actNum}}</view>
                            <image src="/icon/account.png" mode="widthFix"></image>
                        </view>
                    </view>
                </view>
            </view>
        </block>
    </view>
</view>