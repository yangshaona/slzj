/* pages/index/index.wxss */

@import '../template/course_check/course_check.wxss';
.top {
    display: block;
    box-sizing: border-box;
    width: 100%;
    padding: 5%;
    text-align: center;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
    z-index: 2;
}

.top::after {
    content: '';
    display: block;
    box-sizing: border-box;
    position: absolute;
    width: 10%;
    height: 10px;
    background-image: linear-gradient(to right, #91a0ff, #5e73ff);
    border-radius: 1rem;
    margin: -5px 40% auto 40%;
    z-index: -1;
}

.total {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 0;
    background-color: #fafafa;
}

.swiper {
    display: block;
    width: 100%;
    height: 50%;
    text-align: center;
    overflow: hidden;
    padding-top: 80px;
}

.swiper-item {
    display: block;
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
}

.swiper-item image {
    width: 100%;
}


/* 导航栏样式 */

.navTop {
    display: flex;
    box-sizing: border-box;
    width: 90%;
    margin: 5% 5% 0 5%;
    padding: 2% 5% 5% 5%;
    border-radius: 1rem;
    background: #fafafa;
    box-shadow: 0px 1px 5px #aaaaaa;
}

.nav {
    display: block;
    position: relative;
    z-index: 2;
    width: 20%;
    margin: 0 2.5%;
}


/* 导航栏icon */

.nav image {
    display: block;
    width: 60%;
    margin: 20%;
}


/* 导航栏文字 */

.nav view {
    flex-wrap: nowrap;
    width: 100%;
    text-align: center;
    font-size: 0.75rem;
    line-height: 0.5rem;
    padding: 0 0 2px 0;
}


