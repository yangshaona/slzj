/* 缩略图容器 */

.actImg {
    height: 65% !important;
    overflow: hidden;
}


/* 缩略图 */

.actImg image {
    width: 100% !important;
    height: 100%;
}


/* 卡片下部分 */

.ctnBox {
    display: block;
    box-sizing: border-box;
    width: 100%;
    height: 45% !important;
    overflow: hidden;
    padding: 5% 2.5% 2.5% 5%;
}


/* 活动标题 */

.actTitle {
    display: block;
    box-sizing: border-box;
    width: 100%;
    /* padding: 0 0 2% 0; */
}


/* ddl及报名人数 */

.descBox {
    display: flex;
    box-sizing: border-box;
    width: 100%;
    font-size: 0.75rem;
}

.time-ddl {
    display: block;
    width: 60%;
    text-align: left;
    font-weight: 150 !important;
    color: #888888;
    /* margin: auto 0; */
    font-size: 26rpx;
    margin-top: 10rpx;
}

.numBox {
    display: flex;
    box-sizing: border-box;
    width: 40%;
    flex-direction: row-reverse;
    margin-right: 6rpx;
    margin-top: 15rpx;
}

.numBox image {
    width: 1rem;
    margin: 0% 4%;
    /* position: relative; */
}

.numBox view {
    text-align: right;
    color: #6177ff;
}