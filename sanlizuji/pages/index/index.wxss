.select {
    display: block;
    width: 25%;
    margin: 0;
    padding: 2.5%;
    font-size: 0.75rem;
    text-align: center;
    transition: all 0.5s;
}

.selected {
    flex-wrap: nowrap;
    width: 20%;
    text-align: center;
    font-size: 0.75rem;
    line-height: 0.5rem;
    color: #5e73ff;
    padding: 0 0 2px 0;
}

.selected::after {
    content: '';
    display: block;
    box-sizing: border-box;
    position: absolute;
    width: 70%;
    height: 10px;
    background-image: linear-gradient(to right, #91a0ff, #5e73ff);
    border-radius: 1rem;
    margin: -1px 15% auto 15%;
    z-index: -1;
}


/* 搜索框 */

.srcFold {
    display: flex;
    box-sizing: border-box;
    flex-direction: row-reverse;
    width: 90%;
    width: 80rpx !important;
    height: 80rpx !important;
    margin: 5% 5% 0 auto;
    border-radius: 4rem;
    overflow: hidden;
    border: 4rpx #555555 solid;
    transition: cubic-bezier(0.455, 0.03, 0.515, 0.955) 0.5s;
}

.srcExt {
    display: flex;
    box-sizing: border-box;
    flex-direction: row-reverse;
    width: 90%;
    margin: 5% 5% 0 auto;
    border-radius: 2rem;
    overflow: hidden;
    border: 2px #555555 solid;
    transition: cubic-bezier(0.39, 0.575, 0.565, 1) 0.5s;
}

.srcImg {
    display: block;
    width: 40px !important;
    height: 40px !important;
    margin: auto 0;
    border-radius: 100%;
}

.inputFold {
    width: 0px;
    padding: 2.5%;
    opacity: 0%;
    transition: cubic-bezier(0.6, -0.28, 0.735, 0.045) 0.5s;
}

.inputExt {
    width: 70%;
    padding: 2.5%;
    opacity: 100%;
    transition: cubic-bezier(0.47, 0, 0.745, 0.715) 0.5s;
}


/* 活动样式 */

.actTop {
    display: block;
    width: 100%;
    margin: 45rpx 0 45rpx 0;
}


/* 标题栏 */

.title {
    display: block;
    margin-top: 10rpx;
}

.review {
    width: 50%;
    font-size: 1.25rem !important;
    margin: 3rem 5rpx 2rem 5%;
    font-weight: bold !important;
    padding: 0 0 0 2%;
    border-left: 2px #6177ff solid;
}

.more {
    border-radius: 30rpx;
    border: 1rpx solid #6177ff;
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    float: right;
    color: white;
    background: #6177ff;
    margin-right: 15rpx;
}


/* 活动卡片 */

.actBox {
    display: block;
    box-sizing: border-box;
    width: 90%;
    height: 19rem;
    background: whitesmoke;
    margin: 5%;
    padding: 0;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0px 1px 5px #aaaaaa;
}


