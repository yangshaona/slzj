.title {
    display: block;
    padding: 1% 2.5%;
    margin: 5%;
    border-left: 4px #6177ff solid;
}

.card1 {
    display: block;
    box-sizing: border-box;
    margin: 5%;
    padding: 2.5%;
    background-image: linear-gradient(to right, #f5f5f5, #fafafa);
    width: 90%;
    box-shadow: 0 0 10px lightgray;
    border-radius: 1.5rem;
    height: 43%;
}

