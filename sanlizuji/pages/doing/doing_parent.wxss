.coursename {}

.avator {
    display: block;
    width: 30%;
    height: 200rpx;
    margin: 3% 3% 0 2%;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 0 10px lightgray;
}

.avator image {
    width: 100%;
    height: 100%;
}

.infoBox {
    display: block;
    width: 80%;
    text-align: center;
    margin-top: 4%;
}

.info {
    display: flex;
    box-sizing: border-box;
    width: 100%;
    line-height: 1.5rem;
    margin: 5% 0;
}

.name {
    font-size: 1.25rem;
    margin: 0 2.5% 0 0;
}

.sex {
    width: 10%;
}

.icon {
    display: block;
    box-sizing: border-box;
    margin: auto 0;
    width: 10%;
}

.desc {
    display: block;
    box-sizing: border-box;
    width: 85%;
    margin: auto 2.5% !important;
    font-size: 0.75rem;
    margin: auto 0;
}

.numBox {
    display: flex;
    box-sizing: border-box;
    width: 100%;
    margin-top: 3%;
    /* flex-direction: row-reverse; */
}

.numBox image {
    width: 1rem;
    position: relative;
    margin: auto 3rpx;
}

.numBox view {
    /* text-align: right; */
    margin: auto 1rpx;
    color: #000000;
    size: 15rpx;
}