/* pages/course/doing/doing_stu&prt.wxss */

.title {
    display: block;
    box-sizing: border-box;
    background: #6177ff;
    color: white;
    text-align: center;
    padding: 2%;
    margin-bottom: 0;
}

.total {
    background-color: #fafafa;
    width: 100%;
    position: absolute;
    z-index: -2;
}


/* 活动名称 */

.actTitle {
    display: block;
    box-sizing: border-box;
    width: 90%;
    margin: 5%;
    padding: 1% 5%;
    font-size: 1.25rem;
    font-weight: bold;
    border-left: 3px #6177ff solid;
}


/* 导师名片 */

.teacherBox {
    display: flex;
    box-sizing: border-box;
    position: relative;
    width: 90%;
    margin: 2.5% 5%;
    padding: 5%;
    border-radius: 2rem;
    box-shadow: 0px 0px 10px lightgray;
    overflow: hidden;
}

.teacherBox::after {
    content: "";
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: url('https://pic.imgdb.cn/item/61f22e9e2ab3f51d917c141b.jpg');
    background-position: center;
    opacity: 75%;
    top: 0;
    left: 0;
}

.teacherImg {
    margin: 2% 7.5% 0 7.5%;
    width: 35%;
    height: 100%;
    border-radius: 1rem;
    box-shadow: 0px 0px 5px #888888;
}

.teacherInfo {
    display: block;
    position: relative;
    box-sizing: border-box;
    width: 50%;
    height: 100%;
    margin: 2% 0 0 5%;
}

.infoTitle {
    display: block;
    box-sizing: border-box;
    color: #6177ff;
    margin: 0 0 2.5% 0;
}

.teacherName {
    display: flex;
    box-sizing: border-box;
    width: 100%;
    font-size: 1.25rem;
    letter-spacing: 1px;
    margin: 0 auto 10% auto;
    text-align: center;
}

.teacherSex {
    width: 15%;
}

.teacherPhone {
    position: absolute;
    display: block;
    width: 100%;
    box-sizing: border-box;
    font-size: 1rem;
    letter-spacing: 1px;
    bottom: 2%;
    line-height: 1.75rem;
}


/* 活动信息展示 */

.middle {
    display: block;
    width: 100%;
    box-sizing: border-box;
    margin: 5% 0;
    text-align: center;
    color: #6177ff;
}


/* 信息框 */

.dataBox {
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    width: 100%;
    margin: 0 0 10% 0;
    padding: 2.5%;
}

.data {
    display: block;
    position: relative;
    box-sizing: border-box;
    width: 45%;
    margin: 2.5% 2.5%;
    padding: 2.5% 0;
    background: #f6f6f6;
    border-radius: 1rem;
    text-align: center;
    align-items: center;
    box-shadow: 0px 2px 8px #cccccc;
}

.descBox {
    box-sizing: border-box;
    display: block;
    margin: 5% 5%;
}

.desc1 {
    display: block;
    margin: auto 2.5%;
    font-size: 0.85rem;
    color: #6177ff;
}

.descImg {
    width: 20%;
}

.desc2 {
    display: block;
    box-sizing: border-box;
    width: 100%;
    padding: 5%;
    text-align: center;
    font-size: 1rem;
}

.desc2::after {
    content: '';
    display: block;
    width: 20%;
    height: 0.5rem;
    border-radius: 1rem;
    margin: 5% auto 0 auto;
    opacity: 70%;
    background-image: linear-gradient(to right, #a1adff, #6177ff);
}


/* 导师定位 */

.primary {
    display: block;
    box-sizing: border-box;
    margin: 5% auto 10% auto;
    padding: 2.5%;
    color: white;
    background: #6177ff;
}

map {
    display: block;
    box-sizing: border-box;
    width: 90%;
    margin: 5% auto 20% auto;
}