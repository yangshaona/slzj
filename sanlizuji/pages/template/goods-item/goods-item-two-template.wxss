.goods-item-two {
  width: 50%;
  display: inline-block;
}

.goods-item-two image {
  width: 100%;
  height: 300rpx;
  margin-bottom: -15rpx;
}
 
.item-box {
  padding: 5px;
}



.goods-item-two-text1 {
  height: 60rpx;
  margin-top: 8rpx;
}

.goods-item-two .icon-heart, .goods-item-two .icon-xin {
  float: right;
  font-size: 36rpx;  
  margin-top: -5rpx;
}
.goods-item-two .icon-heart{
 color: #acacac;
}
.goods-item-two .icon-xin{
 color: #E41436;
}

.goods-item-pic{
  border-radius: 25%;
}

.goods-item-two-text2 text {
  color: #000;
  font-size: 26rpx;
  
}

.goods-item-two-text2 {
  margin-top: 15rpx;
  height: 50rpx;
  font-size: 23rpx;
  line-height: 50rpx;
}

.goods-item-two-text2 .coupon-price {
  color: #E41436;
  font-size: 40rpx;
}

.goods-item-two-text3 {
  display: flex;
  flex-direction: row;
  margin-top: 20px;
}



.goods-item-price {
  color: #acacac;
  float: left;
  font-size: 24rpx;
  text-decoration: line-through;
}
.goods-item-coupon{
  margin-top:  -6rpx;
}

.goods-item-coupon-text {
   padding: 0 8rpx 0 5rpx; 
   /* height: 35rpx;  */
   /* line-height: 35rpx;  */
   /* text-align: center;  */
   display: inline-block; 
  font-size: 20rpx;
  background-color: #E41436;
  color: #fff;
  border-radius: 6rpx;
}
.goods-item_integral{
  font-size: 24rpx;
  color: #666;
}
.goods-item-sales_volume {
  font-size: 24rpx;
  color: #acacac;
  float: right;
}


.border-radius-20{
 border-radius: 20rpx; 
}

.block-orange{
  position: relative;
  background-image: linear-gradient(to left,#f38200, #ee8b19,#e2943b);
  background-color: white;
  height: 60rpx;
  color:white;
  font-size:25rpx;
  z-index: 99;
}

.border-top{
  position: relative;
  z-index: 99;
  border-radius: 20rpx 20rpx 0 0;
}

.border-bottom{
  border-radius: 0 0 20rpx 20rpx;
}


.goods-item-tow-text {
  position: relative;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 30rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  background-color: white;
  z-index: 2;
  top: -10rpx;
  height: 100rpx;
  padding: 10rpx 10rpx 10rpx 10rpx;
  border-radius: 20rpx;
}

.goods-item-two-opt{
  position: absolute;
  top:100rpx;
  left: 240rpx;
  color: orange;
  border: 1rpx solid #ee8b19;
  border-radius: 30rpx;
  padding: 5rpx 10rpx;
  font-size: 25rpx;
}

.goods-item-two-title {
  font-size: 25rpx;
  padding: 10rpx 5rpx;
  color: #434343;
}

