<template name="temp">

  <view class="goods-item" bindtap='goodsDetails' data-id='{{item.id}}'>
    <view class='item-box'>
      <view>
        <view>
          <image class="border-top" src="{{item.imagesurl}}" binderror="binderrorimg" data-errorimg="{{index}}"/>
          <view class="block-orange border-bottom flex-space-around ui-padding-10-x" style="display:box">
              <text>活动报名结束时间:</text>
              <text> {{item.endtime}}</text>
          </view> 
        </view>
        <view class='goods-item-text'>
          <view class='goods-item-title'>{{item.name}}</view>
        </view>
      </view>
    </view>
  </view>

</template>