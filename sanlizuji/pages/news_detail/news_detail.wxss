/* pages/news/detail_1.wxss */

.top {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 0 0 5% 0;
    overflow: hidden;
}

.top image {
    width: 100% !important;
    height: 100% !important;
}


/* 小标题 */

.infoTtl {
    display: block;
    width: 100%;
    box-sizing: border-box;
    margin: 2.5% 0 5% 0;
    padding: 0 2.5%;
    border-left: 4px #6177ff solid;
}

.infoBox {
    display: block;
    position: relative;
    box-sizing: border-box;
    position: relative;
    width: 100%;
    margin: 2.5% 0;
    padding: 10% 5%;
    background-image: linear-gradient(to left, #f5f5f5, #ffffff);
    box-shadow: 0px 0px 10px lightgray;
}

.ctn {
    display: block;
    width: 100%;
    line-height: 1.5rem;
    font-size: 1rem;
    text-indent: 2rem;
}

.title {
    text-align: center;
    font-size: 1.25rem;
    font-weight: 700;
    margin: 5%;
}

.date {
    color: #6177ff;
    font-size: 0.75rem;
    margin: 10% 0 0 0;
}

.view {
    display: flex;
    flex-direction: row-reverse;
    position: absolute;
    right: 5%;
    bottom: 5%;
    width: 50%;
}

.view image {
    display: block;
    width: 10%;
    margin: auto 5%;
}

.view view {
    margin: auto 0;
    font-size: 0.75rem;
    color: #6177ff;
}