.infoBox {
    display: block;
    box-sizing: border-box;
    position: relative;
    width: 100%;
    margin: 2.5% 0;
    padding: 5%;
    background-image: linear-gradient(to left, #f5f5f5, #ffffff);
    box-shadow: 0px 0px 10px lightgray;
}


/* 头部 */

.top {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 0 0 5% 0;
}

.swiper {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 0;
}

.swiper-item {
    display: block;
    width: 100%;
}

.actImg {
    width: 100%;
    height: 100%;
}

.flexBox {
    display: flex;
    box-sizing: border-box;
    width: 100%;
}


/* 学校头 */

.logo {
    width: 15%;
    border-radius: 50%;
}

.flexBox view {
    margin: auto 5%;
}


/* 小标题 */


/* 小标题 */

.infoTtl {
    display: block;
    width: 100%;
    box-sizing: border-box;
    margin: 5% 0 2% 0;
    padding: 0 2.5%;
    border-left: 4px #6177ff solid;
}

.desc {
    text-indent: 2rem;
    line-height: 1.5rem;
    font-size: 0.85rem;
    margin: 0 0 0 2.5%;
    color: #666666;
}


/* 往期回顾 */

.schoolImg {
    display: block;
    box-sizing: border-box;
    margin: 0;
    width: 100%;
    align-items: center;
}

.schoolImg image {
    display: block;
    width: 90%;
    margin: 5% 5%;
    box-shadow: 0px 0px 10px lightgray;
    border-radius: 1rem;
}

.schoolImg view {
    display: block;
    width: 100%;
    margin: 5% 0;
    text-align: center;
    color: #666666;
}

.empty {
    display: block;
    box-sizing: border-box;
    width: 100%;
    height: 50%;
    padding: 2% 10% 10% 10%;
}

.empty image {
    display: block;
    width: 60%;
    margin: 2% 20%;
    opacity: 70%;
}

.empty view {
    text-align: center;
    color: #888888;
    margin-top: 15rpx;
}