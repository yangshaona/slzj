/* pages/detail/teacher.wxss */

@import '../detail/school.wxss';
@import '../template/not_found/not_found.wxss';
.teacherInfo {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 0;
}

.teacherName {
    font-size: 1.25rem;
    letter-spacing: 2px;
}

.phone {
    display: flex;
    width: 100%;
    margin: 5% 0;
}

.phone image {
    display: block;
    width: 8%;
    margin: 0 2.5% 0 0;
}

.phone view {
    color: #6177ff;
    margin: auto 0;
}


/* 评论 */

.comment {
    display: block;
    box-sizing: border-box;
    width: 100%;
    padding: 5%;
    border-radius: 1rem;
    background: #f5f5f5;
    margin: 2.5% 0;
}

.accountInfo {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
}

.avatorBox {
    width: 15%;
    border-radius: 50%;
    overflow: hidden;
    border: 1px #6177ff solid;
}

.avator {
    width: 100%;
}

.nickName {
    display: block;
    margin: 0 5%;
}

.commentCtn {
    display: block;
    margin: 5% 0;
    line-height: 1.25rem;
    text-indent: 2rem;
}