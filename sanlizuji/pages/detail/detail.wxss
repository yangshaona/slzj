/* 评价 */

.rating {
    display: flex;
    width: 100%;
    margin: 2.5% 0;
}

.ttl {
    display: block;
    margin: auto 2.5% 0 2.5%;
    color: #6177ff;
}

.star {
    position: relative;
    width: 7%;
    margin: auto 2%;
    z-index: 1;
}

.star_half_1 {
    display: block;
    z-index: 2;
    position: absolute;
    width: 50%;
    height: 100%;
    left: 0%;
    bottom: 0%;
}

.star_half_2 {
    display: block;
    z-index: 2;
    position: absolute;
    width: 50%;
    height: 100%;
    right: 0%;
    bottom: 0%;
}

.cmt_input {
    display: block;
    width: 100%;
    text-indent: 2rem;
    padding: 2.5% !important;
    background-image: linear-gradient(to right, #f5f5f5, #fafafa);
    border-radius: 1rem;
    white-space: pre-wrap;
    margin: 5% 0;
}

.stu {
    display: block;
    width: 70%;
    text-align: right;
    font-size: 0.75rem;
}

.comment-star {
    position: relative;
    width: 4%;
    margin: auto 0.5%;
    z-index: 1;
}