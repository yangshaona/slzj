/* pages/detail/detail.wxss */

.top {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 0 0 5% 0;
}

.swiper {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 0;
}

.swiper-item {
    display: block;
    width: 100%;
}

.actImg {
    width: 100%;
    height: 100%;
}


/* 名称及价格 */

.infoBox {
    display: block;
    box-sizing: border-box;
    position: relative;
    width: 100%;
    margin: 2.5% 0 5% 0;
    padding: 5%;
    background-image: linear-gradient(to left, #f5f5f5, #ffffff);
    box-shadow: 0px 0px 10px lightgray;
}

.theme {
    display: block;
    width: 100%;
    margin: 0 0 2% 0;
    letter-spacing: 2px;
}

.price {
    display: flex;
    margin: 2% 0 5% 0;
}

.price text:nth-child(1) {
    color: #6177ff;
}

.price view:nth-child(2) {
    font-size: 0.75rem;
    text-indent: 0.5rem;
}


/* 日期 */

.date {
    display: block;
    box-sizing: border-box;
    position: absolute;
    font-size: 12px;
    letter-spacing: 1px;
    line-height: 1rem;
    bottom: 10%;
}

.date-number {
    justify-content: space-between;
}


/* 围观人数 */

.num {
    display: flex;
    flex-direction: row-reverse;
    box-sizing: border-box;
    position: absolute;
    width: 40%;
    right: 5%;
    bottom: 10%;
    font-size: 10px;
    letter-spacing: 1px;
    line-height: 1rem;
}

.num image {
    width: 10%;
    margin: 0% 3%;
}

.num view {
    display: flex;
}


/* 机构 */

.service {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    margin: 2.5% 0;
}

.logo {
    width: 10%;
    border-radius: 50%;
}

.serviceName {
    display: block;
    margin: auto 2.5%;
    color: #6177ff;
}

.icon {
    width: 5%;
}

.desc {
    display: block;
    width: 100%;
    margin: 2.5% 0;
    font-size: 0.75rem;
    line-height: 20px;
    color: #888888;
}

.desc view {
    text-indent: 2rem;
}


/* 小标题 */

.infoTtl {
    display: block;
    width: 100%;
    box-sizing: border-box;
    margin: 2.5% 0 5% 0;
    padding: 0 2.5%;
    border-left: 4px #6177ff solid;
}


/* 活动行程 */

.journey {
    width: 90%;
    margin: 2% 0% 20% 6%;
}

.journeyTop {
    display: block;
    box-sizing: border-box;
    position: relative;
    width: 90%;
    padding: 0;
    margin: 5%;
}

.journeyTitle {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 10% 0;
    font-size: 1.25rem;
    letter-spacing: 1px;
    text-align: center;
    color: #6177ff;
}

.oneDay {
    display: block;
    position: relative;
    box-sizing: border-box;
    width: 100%;
    background: #f5f5f5;
    margin: 5% 0;
    padding: 5%;
    border-radius: 0 1rem 1rem 0;
    box-shadow: 1px 1px 10px lightgray;
}

.journeyTop::after {
    content: '';
    display: block;
    box-sizing: border-box;
    position: absolute;
    width: 100%;
    border-left: 5px #6177ff solid;
    height: 100%;
    top: 0%;
    left: 0%;
    opacity: 80%;
    z-index: 1;
}

.day {
    display: block;
    box-sizing: border-box;
    margin: 0 0 5% 2.5%;
    color: #6177ff;
    letter-spacing: 5px;
}

.event {
    display: flex;
    box-sizing: border-box;
    margin: 0 0 5% 0;
}

.local {
    display: flex;
    box-sizing: border-box;
    margin: 0 0 5% 0;
}

.journeyIcon {
    width: 8%;
    margin: auto 0;
}

.desc {
    margin: 0 0 0 2.5%;
    color: #666666;
}


/* 评论 */

.comment {
    display: block;
    box-sizing: border-box;
    width: 100%;
    padding: 5%;
    border-radius: 1rem;
    background: #f5f5f5;
    margin: 2.5% 0;
}

.accountInfo {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
}

.avatorBox {
    border-radius: 50%;
    overflow: hidden;
    border: 1px #6177ff solid;
    display: flex;
    box-sizing: border-box;
    width: 15%;
    height: 15%;
    margin: 0 12.5% 0 2.5%;
    padding: 0;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0px 0px 10px lightgrey;
}

.avator {
    width: 100%;
}

.nickName {
    display: block;
}

.commentCtn {
    display: block;
    margin: 5% 0;
    line-height: 1.25rem;
    text-indent: 2rem;
}


/* 底部 */

.bottom {
    display: flex;
    /* position: relative; */
    position: fixed;
    z-index: 2;
    bottom: 0%;
    width: 100%;
    padding: 0;
    /* margin: 2.5% 0; */
    /* padding: 0 1%; */
    background-image: linear-gradient(to left, #f5f5f5, #ffffff);
}

.bottomHalf1 {
    display: block;
    box-sizing: border-box;
    width: 10%;
    padding: 1%;
    margin: auto 1%;
    text-align: center;
    align-items: center;
    line-height: 0.5rem;
}

.bottomHalf1 image {
    width: 100%;
    opacity: 90%;
}

.bottomHalf1 view {
    font-size: 0.75rem;
    color: #888888;
}

.bottomHalf2 {
    display: flex;
    width: 90%;
    margin-left: 10%;
}


