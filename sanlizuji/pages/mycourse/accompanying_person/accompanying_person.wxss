/* pages/mycourse/accompanying_person/accompanying_person.wxss */


/* 活动信息展示 */

.middle {
    display: block;
    width: 100%;
    box-sizing: border-box;
    margin: 1% 0;
    text-align: center;
    color: #6177ff;
}


/* 信息框 */

.dataBox {
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    width: 100%;
    margin: 0 0 5% 0;
    padding: 2.5%;
}

.data {
    display: block;
    position: relative;
    box-sizing: border-box;
    width: 45%;
    margin: 2.5% 2.5%;
    padding: 2.5% 0;
    background: #f6f6f6;
    border-radius: 1rem;
    text-align: center;
    align-items: center;
    box-shadow: 0px 2px 8px #cccccc;
}

.descBox {
    box-sizing: border-box;
    display: block;
    margin: 5% 5%;
}

.desc1 {
    display: block;
    margin: auto 2.5%;
    font-size: 0.85rem;
    color: #6177ff;
}

.descImg {
    width: 20%;
}

.desc2 {
    display: block;
    box-sizing: border-box;
    width: 100%;
    padding: 5%;
    text-align: center;
    font-size: 1rem;
}

.desc2::after {
    content: '';
    display: block;
    width: 20%;
    height: 0.5rem;
    border-radius: 1rem;
    margin: 5% auto 0 auto;
    opacity: 70%;
    background-image: linear-gradient(to right, #a1adff, #6177ff);
}