/* pages/mycourse/mycourse_stu.wxss */

@import '../template/scope/scope.wxss';
@import '../template/unbounded/unbounded.wxss';
@import '../myApply/myApply.wxss';
.total {
    display: block;
    box-sizing: border-box;
    width: 100%;
    background: white;
}


/* 活动卡片 */

.actTop {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin-bottom: 10%;
}

.actBox {
    display: block;
    box-sizing: border-box;
    width: 90%;
    margin: 5%;
    border-radius: 1.5rem;
    background: #f5f5f5;
    box-shadow: 0px 0px 10px lightgrey;
    overflow: hidden;
}

.actImg {
    display: block;
    width: 100% !important;
    height: 60% !important;
}

.actCtn {
    display: block;
    width: 100%;
    height: 35% !important;
    box-sizing: border-box;
    padding: 2.5% 5%;
}

.actTtl {
    display: block;
    box-sizing: border-box;
    font-size: 1rem;
    letter-spacing: 2px;
    margin: 0 0 2.5% 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.actTeacher {
    display: flex;
    box-sizing: border-box;
    width: 100%;
    margin: 0 0 2.5% 0;
}

.actTeacher image {
    width: 5%;
    margin: auto 2.5% auto 0;
}

.actTeacher view {
    color: #6177ff;
    font-size: 0.85rem;
}

.actDate {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    margin: 0 0 2.5% 0;
}

.actDesc {
    display: block;
    box-sizing: border-box;
    width: 50%;
    font-size: 0.75rem;
}

.actDesc:nth-child(1) {
    text-align: left;
}

.actDesc:nth-child(2) {
    text-align: right;
}


/* 无内容 */

.empty {
    display: block;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding: 20% 10%;
}

.empty image {
    display: block;
    width: 60%;
    margin: 2% 20%;
    opacity: 70%;
}

.empty view {
    text-align: center;
    color: #888888;
    margin-top: 15rpx;
}

.empty button {
    display: block;
    box-sizing: border-box;
    width: 50%;
    margin: 10% 25%;
    padding: 0.5%;
    background-image: linear-gradient(to right, #91a0ff, #6177ff);
    color: white;
    border-radius: 0.5rem;
}