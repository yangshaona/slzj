/* pages/task/task.wxss */

.total {
  width: 100%;
  display: block;
  box-sizing: border-box;
}
.actTitle {
  display: block;
  box-sizing: border-box;
  width: 90%;
  margin: 10% 5%;
  padding: 1% 5%;
  font-size: 1.25rem;
  font-weight: bold;
  border-left: 3px #6177ff solid;
}

/* 任务卡片 */
.taskBox {
  display: block;
  box-sizing: border-box;
  width: 90%;
  margin: 5%;
  padding: 5%;
  background-image: linear-gradient(to top left, #fafaf5, #fafafa, #fafafa);
  border-radius: 1rem;
  box-shadow: 0px 0px 10px lightgrey;
}
.day {
  display: block;
  color: #6177ff;
  margin: 2.5% 0;
}
.locateBox {
  display: flex;
  box-sizing: border-box;
  width: 100%;
  margin: 2.5% 0 5% 0;
}
.locateImg {
  display: block;
  box-sizing: border-box;
  margin: 0 1% 0 -1%;
  width: 6%;
}
.locate {
  color: #6177ff;
  font-size: 0.85rem;
}
.task {
  display: block;
  width: 100%;
  margin: 2.5% 0;
  text-indent: 2rem;
  white-space: pre-wrap;
}
