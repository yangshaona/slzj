/* pages/person_info/stu_info.wxss */

.primary {
    display: block;
    box-sizing: border-box;
    text-align: center;
    align-items: center;
    width: 90%;
    margin: 0% 5%;
    padding: 1%;
    line-height: 2rem;
}

.info_desc_box::after {
    content: '';
    display: block;
    position: absolute;
    width: 60%;
    height: 12px;
    left: 20%;
    bottom: -5px;
    z-index: -1;
    border-radius: 1.5rem;
    background: linear-gradient(to right, #8595ff, #6177ff);
}

.info_desc {
    display: block;
    box-sizing: border-box;
    line-height: 2rem;
}

.line {
    width: 100%;
    margin-left: 5rpx;
    margin-right: 5rpx;
    border-bottom: 1rpx solid rgb(196, 194, 194);
}

.logout {
    margin-top: 5%;
}

.desc {
    line-height: 3rem;
    position: relative;
    display: flex;
}


/* 弹窗 */

.model {
    position: absolute;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 999;
    opacity: 0.5;
    top: 0;
    left: 0;
}

.modalDlg {
    width: 80%;
    position: fixed;
    top: 350rpx;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.windowRow {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 130rpx;
    width: 100%;
}

.back {
    text-align: center;
    color: #1677ff;
    font-size: 30rpx;
    margin: 30rpx;
}

.userTitle {
    font-size: 30rpx;
    color: rgb(10, 10, 10);
    margin: 30rpx;
}

.wishName {
    width: 100%;
    justify-content: center;
    flex-direction: row;
    display: flex;
    margin-bottom: 30rpx;
    margin: 0% 3% 5% 3%;
}

.wish_put {
    width: 55%;
    border: 1px solid;
    border-radius: 10rpx;
    padding-left: 10rpx;
}

.wishbnt {
    width: 100%;
    font-size: 30rpx;
    margin-bottom: 30rpx;
}

.wishbnt_bt {
    width: 50%;
    background-color: #1677ff;
    color: #ffffff;
    font-size: 30rpx;
    border: 0;
}