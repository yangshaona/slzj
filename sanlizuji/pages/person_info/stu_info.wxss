/* pages/person_info/stu_info.wxss */

.primary {
    display: block;
    box-sizing: border-box;
    text-align: center;
    align-items: center;
    width: 90%;
    margin: 0% 5%;
    padding: 1%;
    line-height: 2rem;
}

.info_desc_box::after {
    content: '';
    display: block;
    position: absolute;
    width: 60%;
    height: 12px;
    left: 20%;
    bottom: -5px;
    z-index: -1;
    border-radius: 1.5rem;
    background: linear-gradient(to right, #8595ff, #6177ff);
}

.info_desc {
    display: block;
    box-sizing: border-box;
    line-height: 2rem;
}

.line {
    width: 100%;
    margin-left: 5rpx;
    margin-right: 5rpx;
    border-bottom: 1rpx solid rgb(196, 194, 194);
}

.logout {
    margin-top: 5%;
}

.desc {
    line-height: 3rem;
    position: relative;
    display: flex;
}


/* 弹窗 */

.model {
    position: absolute;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 999;
    opacity: 0.5;
    top: 0;
    left: 0;
}

.modalDlg {
    width: 80%;
    position: fixed;
    top: 350rpx;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.windowRow {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 130rpx;
    width: 100%;
}

.back {
    text-align: center;
    color: #1677ff;
    font-size: 30rpx;
    margin: 30rpx;
}

.userTitle {
    font-size: 30rpx;
    color: rgb(10, 10, 10);
    margin: 30rpx;
}

.wishName {
    width: 100%;
    justify-content: center;
    flex-direction: row;
    display: flex;
    margin-bottom: 30rpx;
    margin: 0% 3% 5% 3%;
}

.wish_put {
    width: 55%;
    border: 2rpx solid rgba(6, 6, 7, 0.3);
    border-radius: 10rpx;
    padding-left: 10rpx;
    height: 100%;
    padding: 8rpx;
}

.wishbnt {
    display: flex;
    width: 90%;
    font-size: 30rpx;
    margin-bottom: 30rpx;
    height: 100%;
    direction: row;
    text-align: center;
    background-color: #fff;
    padding: 10%;
    /* background: rgba(0, 0, 0, .5); */
    border: 2rpx solid rgba(7, 17, 27, 0.1);
}

.wishbnt_bt {
    width: 50%;
    /* background-color: #1677ff; */
    color: #322ff1;
    font-size: 30rpx;
}

.wishbnt_bt1 {
    width: 50%;
    /* background-color: #1677ff; */
    font-size: 30rpx;
    border: 0;
}

.userTitle1 {
    color: rgb(10, 10, 10);
    /* margin: 30rpx; */
    display: flex;
    align-items: center;
}

.change-name {
    /* width: 100%; */
    height: 30%;
    text-align: center;
    font-size: 40rpx;
    margin: 10rpx 0;
}

.modal-btn-wrapper {
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    line-height: 100rpx;
    border-top: 2rpx solid rgba(7, 17, 27, 0.1);
}

.cancel-btn,
.confirm-btn {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
}

.cancel-btn {
    border-right: 2rpx solid rgba(7, 17, 27, 0.1);
}

.input-name {
    display: flex;
    width: 70%;
    height: 100%;
    padding: 20rpx;
    border: 1rpx solid rgba(85, 86, 87, 0.1);
    justify-content: center;
    margin: 4% 15% 4% 12%;
    /* vertical-align: middle; */
}

.input {
