/* @import '../person_info/stu_info.wxss'; */

.model {
    position: absolute;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 999;
    opacity: 0.5;
    top: 0;
    left: 0;
}

.modalDlg {
    width: 80%;
    position: fixed;
    top: 100rpx;
    left: 0;
    right: 0;
    z-index: 999999999;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: auto;
}

.info {
    width: 100%;
}

.change-name {
    /* width: 100%; */
    height: 30%;
    text-align: center;
    font-size: 40rpx;
    margin: 10rpx 0;
}

.box .user-view {
    margin-left: 20rpx;
    font-size: 1.1rem;
    font-weight: bold;
}

.modal-btn-wrapper {
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    line-height: 100rpx;
    border-top: 2rpx solid rgba(7, 17, 27, 0.1);
}

.cancel-btn,
.confirm-btn {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
}

.cancel-btn {
    border-right: 2rpx solid rgba(7, 17, 27, 0.1);
}

.input-info {
    display: flex;
    width: 100%;
    justify-content: center;
    flex-direction: row;
    font-size: 0.95rem;
}

.input-name {
    display: flex;
    width: 60%;
    height: 100%;
    padding: 20rpx;
    border: 1rpx solid rgba(79, 79, 80, 0.1);
    justify-content: center;
    margin: 4% 5% 4% 5%;
    /* vertical-align: middle; */
}

.input-view {
    justify-content: center;
    margin: 4% 0%;
    padding: 20rpx 0 20rpx 20rpx;
}

.term {
    border-radius: 20rpx;
}

.cancel-term {
    text-align: center;
    font-size: 1.1rem;
    padding: 2%;
}

.term-text {
    font-size: 1rem;
    background-color: rgb(230, 253, 235);
    border-radius: 20rpx;
    margin: 3% 10%;
    padding: 2%;
    align-items: center;
}

.confirm {
    font-size: 1.1rem;
    border-radius: 30rpx;
    margin: 5% 4%;
    color: #fff;
    background-color: rgb(3, 193, 95);
}


/* 添加和删除按钮 */

.add {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 10rpx 0 30rpx;
}

.add .add-btn {
    color: white;
    font-size: 0.9rem;
    background-image: linear-gradient(to right, #6177ff, #8898ff);
}

.add .del-btn {
    color: #555;
    font-size: 0.9rem;
}

.line {
    width: 100%;
    border-top: 1px solid rgb(219, 219, 219);
}