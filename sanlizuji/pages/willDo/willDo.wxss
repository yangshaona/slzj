/* pages/willDo/willDo.wxss */

@import '../template/scope/scope.wxss';
.total {
    display: block;
    box-sizing: border-box;
    width: 100%;
    background: white;
}


/* 顶部标题 */

.title {
    display: block;
    box-sizing: border-box;
    width: 100%;
    text-align: center !important;
    color: black;
    padding: 2.5%;
    margin-bottom: 0;
}


/* 活动卡片 */

.actTop {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 10% 0;
}

.actBox {
    display: block;
    box-sizing: border-box;
    width: 90%;
    margin: 5%;
    border-radius: 1.5rem;
    background: #f5f5f5;
    box-shadow: 0px 0px 10px lightgrey;
    overflow: hidden;
}

.actImg {
    display: block;
    width: 100% !important;
    height: 65% !important;
}

.actCtn {
    display: block;
    width: 100%;
    height: 35% !important;
    box-sizing: border-box;
    padding: 2.5% 5%;
}

.actTtl {
    display: block;
    box-sizing: border-box;
    font-size: 1rem;
    letter-spacing: 2px;
    margin: 0 0 2.5% 0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.actTeacher {
    display: flex;
    box-sizing: border-box;
    width: 100%;
    margin: 0 0 2.5% 0;
}

.actTeacher image {
    width: 5%;
    margin: auto 2.5% auto 0;
}

.actTeacher view {
    color: #6177ff;
    font-size: 0.85rem;
}

.actDate {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    margin: 0 0 2.5% 0;
}

.actDesc {
    display: block;
    box-sizing: border-box;
    width: 50%;
    font-size: 0.75rem;
}

.actDesc:nth-child(1) {
    text-align: left;
}

.actDesc:nth-child(2) {
    text-align: right;
}

.empty {
    display: block;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding: 20% 10%;
}

.empty image {
    display: block;
    width: 60%;
    margin: 2% 20%;
    opacity: 70%;
}

.empty view {
    text-align: center;
    color: #888888;
    margin-top: 15rpx;
}